<h1>New Post</h1>

<%= form_with model: @post, url: posts_path, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.label :place_id %>
    <%= f.collection_select :place_id, Place.all, :id, :name, prompt: "Select a place" %>
  </div>

  <div>
    <%= f.submit "Create Post" %>
  </div>
<% end %>